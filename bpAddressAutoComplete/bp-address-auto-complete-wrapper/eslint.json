{
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "angular": false,
    "_": false,
  	"i18n": false
  },
  "rules": {
    // Possible errors
    "no-console": 2,
    "eqeqeq": 2,
    // Best practices
    "no-multi-str": 0,
    // Strict mode errors
    "global-strict": [2,"never"],
    "strict": 2,
    // Variable naming errors
    "no-use-before-define": 0,
    // Stylistic errors
    "eol-last": 0,
    "quotes": 0,
    "no-underscore-dangle": 0,
    "no-mixed-spaces-and-tabs": 2,
    "key-spacing": 0,
    "comma-spacing": 0,
    "no-trailing-spaces":0
  }
}
